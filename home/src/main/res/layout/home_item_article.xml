<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/dp_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_article_item_first_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_6"
            android:paddingTop="@dimen/dp_2"
            android:paddingEnd="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_2"
            android:background="@drawable/selector_shape_article_tag_border"
            android:textColor="@color/selector_shape_article_tag_color"
            android:textSize="@dimen/tag_sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:text="置顶" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_article_item_second_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_shape_article_tag_border"
            android:textColor="@color/selector_shape_article_tag_color"            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/tv_home_article_item_first_tag"
            android:paddingTop="@dimen/dp_2"
            android:paddingStart="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_2"
            android:textSize="@dimen/tag_sp"
            android:paddingEnd="@dimen/dp_6"
            android:layout_alignParentTop="true"
            tools:text="置顶" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_article_item_three_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_shape_article_tag_border"
            android:textColor="@color/selector_shape_article_tag_color"            android:layout_marginStart="@dimen/dp_5"
            android:layout_toEndOf="@+id/tv_home_article_item_second_tag"
            android:paddingTop="@dimen/dp_2"
            android:paddingStart="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_2"
            android:textSize="@dimen/tag_sp"
            android:paddingEnd="@dimen/dp_6"
            android:layout_alignParentTop="true"
            tools:text="置顶" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_article_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/colorContent"
            android:textSize="@dimen/context_sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            tools:ignore="RelativeOverlap" />

        <View
            android:id="@+id/line_home_article_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLine"
            android:layout_below="@+id/tv_home_article_item_type" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home_article_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:layout_below="@+id/line_home_article_item"
            android:maxLines="3"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/title_sp"
            android:textStyle="bold"
            tools:text="2222222222222222222" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_home_article_item_title"
            android:layout_toStartOf="@+id/iv_home_article_item_collect"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_home_article_item_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_weight="2"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorContent"
                android:textSize="@dimen/context_sp"
                tools:text="@string/home_article_author" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_home_article_item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_weight="3"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorContent"
                android:textSize="@dimen/context_sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_home_article_item_collect"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@drawable/selector_article_collect"
            android:layout_below="@+id/tv_home_article_item_title"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
